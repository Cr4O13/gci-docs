{ "controllers": [ 
    { "ignore": false,
      "log": false,
      "name": "Saitek X52 Pro Flight Control System",
      
      "axis": [ 
        { "id": { "index": 0, "label": "JOY Stick Sideways" }, 
          "write": {
            "on_change": {
              "variable": "AILERON POSITION",
              "unit": "Position", 
              "output": { "invert": false, "scale": 1 }
            }
          }  
        },
        
        { "id": { "index": 1, "label": "JOY Stick Pull" },
          "write": {
            "on_change": { 
              "variable": "ELEVATOR POSITION",
              "unit": "Position"
            }
          }
        },
        
        { "id": { "index": 2, "label": "TQ Throttle Lever" }, 
          "write": {
            "on_change": { 
              "variable": "GENERAL ENG THROTTLE LEVER POSITION:1",
              "unit": "PERCENT",
              "output": { "scale": 100 }
            }
          }
        },
        
        { "id": { "index": 3, "label": "JYO Stick Rotate" },
          "write": {
            "on_change": { "variable": "RUDDER POSITION", "unit": "POSITION" }
          }
        },
        
        { "id": { "index": 4, "label": "TQ Slider" }, 
          "write": {
            "on_change": { 
              "variable":  "GENERAL ENG PROPELLER LEVER POSITION:1", 
              "unit": "PERCENT",
              "output": { "scale": 100 }
            }
          }
        },
        
        { "id": { "index": 5, "label": "TQ Small Knob" }, 
          "write": {
            "on_change": { 
              "variable":  "GENERAL ENG MIXTURE LEVER POSITION:1", 
              "unit": "PERCENT",
              "output": { "scale": 100 }
            }
          }
        },
      ],
      
      "button": [ 

        { "log": false,
          "id": { "index": 8, "label": "JOY Switch T1" },
          "send": {
            "on_true": { "event": "GEAR_TOGGLE" }
          }
        },
        
        { "log": false,
          "id": { "index": 9, "label": "JOY Switch T2" }, 
          "send": {
            "on_true":  { "event": "GEAR_SET", "output": { "value": 0 } },
            "on_false": { "event": "GEAR_SET", "output": { "value": 1 } }
          }
        },
          
        { "log": false,
          "id": { "index": 10, "label": "JOY Switch T3" },
          "send": { 
            "on_true":  { "event": "GEAR_UP" }
            "on_false": { "event": "GEAR_DOWN" }
          }
        },
          
        { "log": false,
          "id": { "index": 11, "label": "JOY Switch T4" }, 
          "write": {
            "on_true":  { 
              "variable": "GEAR HANDLE POSITION", 
              "unit": "Position", 
              "output": { "value": 0 } 
            },
            "on_false": { 
              "variable": "GEAR HANDLE POSITION", 
              "unit": "Position", 
              "output": { "value": 1 } 
            }
          }
        }
      ]
    }
  ]
}
