        { "log": false,
          "id": [ 2, "TQ Throttle Lever" ], 
          "write": [ "GENERAL ENG THROTTLE LEVER POSITION:1", "PERCENT",
            { "scale": 100,
              "response": [				
                [ -1.000, 1.000	], 
                [  1.000, 0.000	]
              ]
            }
          ]
        },
        
        { "id": [ 3, "JYO Stick Rotate" ],
          "write": [ "RUDDER POSITION", "POSITION" ]
        },
        
        { "log": false,
          "id": [ 4, "TQ Slider" ], 
          "write": [ "GENERAL ENG PROPELLER LEVER POSITION:1", "PERCENT",
            { "scale": 100,
              "response": [				
                [ -1.000, 	0.000	], 
                [  1.000, 	1.000	]
              ]
            }
          ]
        },
        
        { "id": [ 5, "TQ Small Knob" ], 
          "write": [ "GENERAL ENG MIXTURE LEVER POSITION:1", "PERCENT",
            { "scale": 100,
              "response": [				
                [ -1.000, 	0.000	], 
                [  1.000, 	1.000	]
              ]
            }
          ]
        },
        
        { "log": false,
          "id": [ 6, "JOY POV left-right" ],
          "subtype": "switched", 
          "send": { 
            "on_plus":  "VIEW_LEFT", 
            "on_minus": "VIEW_RIGHT", 
            "on_zero":  "VIEW_RESET" 
          }
        },
        
        { "log": false,
          "id": [ 7, "JOY POV up-down" ],   
          "republish": [ "gci/x52/pov/updwn", "DOUBLE", 0.0 ]
        }
      ],
      
      "buttons": [ 

        { "ignore": true, "id": [  0, "JOY Half Trigger" ] },
        { "ignore": true, "id": [  1, "JOY SAFE Fire"    ] },
        { "ignore": true, "id": [  2, "JOY Button A"     ] },
        { "ignore": true, "id": [  3, "JOY Button B"     ] },
        { "ignore": true, "id": [  4, "JOY Button C"     ] },
        { "ignore": true, "id": [  5, "JOY Pinky"        ] },
        { "ignore": true, "id": [ 14, "JOY Full Trigger" ] },
        
        { "log": false,
          "subtype": "button", 
          "id": [  8, "JOY Switch T1" ],
          "send":  "GEAR_TOGGLE" 
        }, 
        { "log": false,
          "id": [  9, "JOY Switch T2" ], 
          "send": {
            "on_true":  [ "GEAR_SET", 0 , "equals Up"   ],
            "on_false": [ "GEAR_SET", 1 , "equals down" ]
          }
        },
          
        { "log": false,
          "id": [ 10, "JOY Switch T3" ],
          "send": { 
            "on_true":  "GEAR_UP", 
            "on_false": "GEAR_DOWN"
          }
        },
          
        { "log": false,
          "id": [ 11, "JOY Switch T4" ], 
          "write": {
            "on_true":  [ "GEAR HANDLE POSITION", "Position", 0 ],
            "on_false": [ "GEAR HANDLE POSITION", "Position", 1 ]
          }
        },
        
        { "log": false, 
          "id": [ 12, "JOY Switch T5" ], 
          "republish": [ "gci/x52/t5", "BOOL", false, "input" ]
        },
        
        { "log": false,
          "id": [ 13, "JOY Switch T6" ], 
          "republish": [ "gci/x52/t6", "BOOL", true, "invert" ]
        },
        
        { "log": false,
          "id": [ 19, "JOY Hat Pull Down" ],
          "subtype": "timed", 
          "send": "ELEV_TRIM_DN"
        },
        { "log": false,
          "id": [ 21, "JOY Hat Pull Down" ], 
